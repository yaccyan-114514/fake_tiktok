<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="80dp"
        android:paddingBottom="16dp"
        android:background="#000000">

        <!-- 投稿标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="投稿"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp" />

        <!-- 图片编辑模块 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="12dp" />

        <!-- 一键生成长文按钮 -->
        <Button
            android:id="@+id/buttonAIGenerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="一键生成文本"
            android:drawableLeft="@drawable/text"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/AIGenerateButtonStyle" />

        <!-- 文字编辑模块 -->

        <!-- 标题输入框容器 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            
            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:hint="添加标题"
                android:textSize="20sp"
                android:textColorHint="#808080"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|start"
                android:padding="12dp"
                android:paddingEnd="60dp"
                android:background="@drawable/edit_text_background_black"
                android:inputType="textCapSentences"
                android:maxLength="100"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true" />
            
            <!-- 标题字数统计 -->
            <TextView
                android:id="@+id/textViewTitleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:text="0/100"
                android:textSize="12sp"
                android:textColor="#808080" />
        </FrameLayout>

        <!-- 内容输入框容器 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            
            <EditText
                android:id="@+id/editTextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background_black"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="top|start"
                android:hint="分享你的故事"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLength="2000"
                android:minHeight="120dp"
                android:padding="12dp"
                android:paddingEnd="70dp"
                android:paddingBottom="30dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="16sp" />
            
            <!-- 内容字数统计 -->
            <TextView
                android:id="@+id/textViewContentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:text="0/2000"
                android:textSize="12sp"
                android:textColor="#808080" />
        </FrameLayout>

        <!-- 标签和@好友按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/buttonAddTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="标签"
                android:drawableLeft="@drawable/tag"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                style="@style/CustomButtonStyle" />

            <Button
                android:id="@+id/buttonAddMention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@好友"
                android:drawableLeft="@drawable/friend"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                style="@style/CustomButtonStyle" />
        </LinearLayout>

        <!-- 标签显示区域（在标签按钮和位置按钮之间） -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="40dp"
            app:chipSpacing="8dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp" />

        <!-- 地址获取 -->
        <Button
            android:id="@+id/buttonGetLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            style="@style/CustomButtonStyle" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未获取位置"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/edit_text_background_black"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- 发布按钮 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="16dp" />

        <Button
            android:id="@+id/buttonPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="32dp"
            style="@style/PostButtonStyle"
            android:gravity="center"
            android:padding="16dp"
            android:text="发布"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>

